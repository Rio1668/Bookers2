<div class="container">
  <div class"row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <p id="notice"></p>
      
      <h2>User info</h2>
      <% if @user.errors.any? %>
      <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
      
      <%= form_with model: @user do |f| %>
      
        <div class="form-group">
          <label>Name</label>
          <%= f.text_field :name, class: "form-control user_name" %>
        </div>
        
        <div class="form-group">
          <label>Image</label>
          <br>
          <%= f.file_field :profile_image, class: "form-conrol profile_image" %>
        </div>
        
        <div class="form-group">
          <label>Introduction</label>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        
        <%= f.submit "Update User", class: "btn btn-secondary" %>
        
      <% end %>
    </div>
  </div>
</div>